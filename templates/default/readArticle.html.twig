{% extends 'base.html.twig' %}

{% block title %}{{ article.titreArticle }}{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center">
    <img src="{{ asset('uploads/image_couverture/'~ article.image) }}" alt="oui" class="lg:rounded h-40 lg:h-60 lg:w-2/5 w-full object-cover shadow-lg">
    <div class="border-b-2 border-gray-800 w-full rounded-full lg:border-transparent text-4xl">
        <h1 align="center" class="font-extrabold">{{ article.titreArticle|upper }}</h1>
    </div>
    <div class="container">
        <div class="float-center" align="center">
            <p class="italic mt-2 text-2xl">{{ article.resumeArticle }}</p>
            <hr>
            <p class="mt-2">{{ article.contenuArticle|purify }}</p>
        </div>
    </div>
</div>
{% endblock %}